&GLOBAL
  PREFERRED_DIAG_LIBRARY SCALAPACK
  EXTENDED_FFT_LENGTHS TRUE
  PRINT_LEVEL MEDIUM
  PROJECT_NAME calc/conf_0/field_x
  RUN_TYPE ENERGY_FORCE
&END GLOBAL
&FORCE_EVAL
  METHOD QS
  &DFT
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    WFN_RESTART_FILE_NAME ./RESTART.wfn
    CHARGE 0
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    &SCF
      MAX_SCF 50
      EPS_SCF 1e-08
      SCF_GUESS RESTART
      &OT ON
        MINIMIZER DIIS
        PRECONDITIONER FULL_KINETIC
      &END OT
      &OUTER_SCF
        EPS_SCF 1e-08
        MAX_SCF 100
      &END OUTER_SCF
      &PRINT
        &RESTART
          FILENAME =RESTART.wfn
        &END RESTART
      &END PRINT
    &END SCF
    &MGRID
      NGRIDS 5
      CUTOFF 800
      REL_CUTOFF 60
    &END MGRID
    &XC
      &XC_FUNCTIONAL
        &PBE TRUE
          PARAMETRIZATION revPBE
        &END PBE
      &END XC_FUNCTIONAL
      &VDW_POTENTIAL
        POTENTIAL_TYPE PAIR_POTENTIAL
        &PAIR_POTENTIAL
          R_CUTOFF 15
          TYPE DFTD3
          PARAMETER_FILE_NAME dftd3.dat
          REFERENCE_FUNCTIONAL revPBE
          LONG_RANGE_CORRECTION TRUE
        &END PAIR_POTENTIAL
      &END VDW_POTENTIAL
    &END XC
    &POISSON
      POISSON_SOLVER WAVELET
      PERIODIC NONE
    &END POISSON
    &PRINT
      &MOMENTS ON
      &END MOMENTS
      &MULLIKEN ON
        FILENAME =mulliken.dat
      &END MULLIKEN
      &HIRSHFELD ON
        FILENAME =hirshfeld.dat
      &END HIRSHFELD
    &END PRINT
    &PERIODIC_EFIELD
      INTENSITY 0.0005
      POLARISATION 1.0 0.0 0.0
    &END PERIODIC_EFIELD
  &END DFT
  &SUBSYS
    &CELL
      A 21.436453 0.0 0.0
      B 0.0 21.436453 0.0
      C 0.0 0.0 21.436453
      PERIODIC NONE
    &END CELL
    &COORD
      O 10.5308717 10.47996245 11.0298425
      H 11.436453 10.67162155 10.8216375
      H 10.0 10.95649055 10.4066105
    &END COORD
    &KIND H
      POTENTIAL GTH-PBE-q1
      BASIS_SET DZVP-MOLOPT-SR-GTH-q1
    &END KIND
    &KIND O
      POTENTIAL GTH-PBE-q6
      BASIS_SET DZVP-MOLOPT-SR-GTH-q6
    &END KIND
  &END SUBSYS
  &PRINT
    &FORCES ON
      FILENAME =forces.xyz
    &END FORCES
  &END PRINT
&END FORCE_EVAL
